<LinearLayout 
             android:layout_width="match_parent" 
             android:layout_height="match_parent" 
             android:orientation="vertical"> 
  
             <TextView 
                 android:layout_width="match_parent" 
                 android:layout_height="wrap_content" 
                 android:layout_marginBottom="5dp" 
                 android:layout_marginLeft="@dimen/input_margin_hor" 
                 android:layout_marginRight="@dimen/input_margin_hor" 
                 android:layout_marginTop="@dimen/input_margin_hor" 
                 android:hint="Coupon Number" 
                 android:textSize="@dimen/hint_hin_size" /> 
  
