                 android:layout_width="match_parent" 
                 android:layout_height="3dp" 
                 android:layout_marginLeft="@dimen/input_margin_hor" 
                 android:layout_marginRight="@dimen/input_margin_hor" 
                 android:background="@color/colorPrimary" />                
</LinearLayout>
